<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <key n="100">
    <name>d</name>
    <desc>Canopy</desc>
    <binding>
      <command>nasal</command>
      <script>doors.crew.toggle();</script>
    </binding>
  </key>

<key n="102">
	<name>f</name>
	<desc>Increase sweep</desc>
	<binding>
	  <command>nasal</command>
	  <script>flight.sweepin();</script>
	</binding>
	<mod-up>
	  <binding>
	    <command>nasal</command>
	    <script>print("end wingsweep");</script>
	  </binding>
	</mod-up>
      </key>
      
      <key n="70">
	<name>F</name>
	<desc>Decrease sweep</desc>
	<binding>
	  <command>nasal</command>
	  <script>flight.sweepout();</script>
	</binding>
	<mod-up>
	  <binding>
	    <command>nasal</command>
	    <script>print("end wingsweep");</script>
	  </binding>
	</mod-up>
      </key>

     <key n="4">
	<name>Ctrl-d</name>
	<desc>Open/close baydoors</desc>
	<binding>
	<command>nasal</command>
	<script>baydoors.baydoors_switch(2)</script>
	</binding>
     </key>

  <key n="115">
    <name>s</name>
    <desc>Fire Starter on Selected Engine(s)</desc>
    <binding>
      <command>property-assign</command>
      <property>/controls/switches/starter</property>
      <value type="int">1</value>
    </binding>
    <binding>
      <command>nasal</command>
      <script>controls.startEngine()</script>
    </binding>
    <mod-up>
      <binding>
        <command>property-assign</command>
        <property>/controls/switches/starter</property>
        <value type="int">0</value>
      </binding>               
      <binding>
        <command>nasal</command>
        <script>props.setAll("/controls/engines/engine", "starter", 0)</script>
      </binding>
    </mod-up>
  </key> 

    <key n="83">
        <name>S</name>
        <desc>Toggle smoke</desc>
        <binding>
          <command>property-toggle</command>
          <property>controls/smoke</property>
        </binding>
      </key>                                     

</PropertyList>
