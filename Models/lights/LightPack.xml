<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- nav lights -->
  <!-- green and red navigation lights, usually mounted on the wingtips -->
  <!-- note: default orientation is up -->
  <model>
    <name>GreenLight</name>
    <path>Aircraft/daVinci_F-111G/Models/lights/GreenLight.xml</path>
    <offsets>
     <x-m>1.225</x-m>
      <y-m>11.080</y-m>
      <z-m>0.770</z-m>
      <roll-deg>-90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  <model>
    <name>RedLight</name>
    <path>Aircraft/daVinci_F-111G/Models/lights/RedLight.xml</path>
    <offsets>
       <x-m>1.225</x-m>
      <y-m>-11.080</y-m>
      <z-m>0.770</z-m>
      <roll-deg>90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>

  
  <!-- beacon -->
  <!-- bright red flashing light -->
  <!-- note: default orientation is up -->
  <model>
    <name>Beacon1</name>
    <path>Aircraft/daVinci_F-111G/Models/lights/Beacon.xml</path>
    <offsets>
    <x-m>-2.107</x-m>
      <y-m>-0.211</y-m>
      <z-m>1.208</z-m>
      <pitch-deg>6</pitch-deg>
    </offsets>
  </model>
